<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImiknWifiNavigationApp.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <HorizontalStackLayout
            Grid.Row="0"
            HorizontalOptions="Center">
            <Picker
                x:Name="floorsPicker"
                SelectedIndexChanged="floorsPicker_SelectedIndexChanged" />
            <Label x:Name="mapInfo"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center">
                Cursor position: (256,128)
            </Label>
        </HorizontalStackLayout>


        <Image
            x:Name="mapImage"
            Grid.Row="1" />
        <!--Source="Resources\Maps\1.png"/>-->

        <HorizontalStackLayout
            Grid.Row="2"
            HorizontalOptions="Center">
            <RadioButton
                x:Name="navigationModeRadioButton"
                IsChecked="True"
                Content="Navigation mode" />
            <RadioButton
                x:Name="cursorModeRadioButton"
                Content="Cursor mode" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>